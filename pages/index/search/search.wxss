/* pages/search/search.wxss */
@import "../../common/header.wxss";



.search-input{
    flex-grow: 1;
    background-color: white;
    margin: 0rpx 10rpx;
    padding: 0rpx 10rpx;
    height: 60rpx;
    font-size: 33rpx;
}


.tags-box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    align-content: space-between;
    flex-wrap: wrap;
    width: 100%;
    padding: 40rpx 50rpx;
    /* background-color: rgb(240, 240, 240); */
    border-bottom: 1rpx solid silver;
}

.tags-tip{
    width: 100%;
    font-size: 25rpx;
    margin: 0rpx 30rpx;
    color: rgb(145, 145, 145);
}

.tag{
    text-align: center;
    margin: 20rpx 0rpx 10rpx 20rpx;
    padding: 10rpx 5rpx;
    width: 150rpx;
    font-size: 27rpx;
    background-color: rgb(240, 240, 240);
    color: black;
    border-radius: 20rpx;
}

.selected{
    color: white;
    background-color: rgb(140, 0, 0);
}